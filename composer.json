{
    "name": "lukasbableck/contao-backend-view-transition-bundle",
    "type": "contao-bundle",
	"description": "This bundle adds a view transition effect to the Contao backend.",
	"keywords": [
		"backend",
		"turbo",
		"transition",
		"contao"
	],
    "license": "LGPL-3.0-or-later",
	"authors": [
		{
			"name": "Lukas Bableck",
			"email": "lukas@bableck.dev",
			"homepage": "https://bableck.dev"
		}
	],
    "require": {
        "php": "^8.1",
        "contao/core-bundle": "^5.4"
    },
	"conflict": {
		"contao/manager-plugin": "<2.0 || >=3.0"
	},
	"require-dev": {
		"contao/manager-plugin": "^2.0",
		"friendsofphp/php-cs-fixer": "^3.57"
	},
    "autoload": {
        "psr-4": {
            "Lukasbableck\\ContaoBackendViewTransitionBundle\\": "src/"
        }
    },
	"extra": {
		"contao-manager-plugin": "Lukasbableck\\ContaoBackendViewTransitionBundle\\ContaoManager\\Plugin"
	}
}
